{% extends "./base.html.twig" %}

{% block title %}
  Write!
{% endblock %}

{% block main %}

  <form
    id="search"
    class="search-form"
    action="search.php"
    method="tag"
    autocomplete="on"
  >
      
    <input
      type="search"
      placeholder="Search"
      id="search"
      name="search"
    />
          
	</form>

  <h2>See all in "{{ tag.title }}"</h2>

  {% if pagination is defined and pagination.items|length %}

    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'post.title') }}</th>
          <th>{{ 'label.actions'|trans }}</th>
        </tr>
      </thead>
      <tbody>

        {% for post in pagination.items %}
    
          <tr>
            <td>{{ post.title }}</td>
            <td>
              <a href="{{ url('post_show', {id: post.id}) }}" title="{{ 'action.show'|trans }}">
                  {{ 'action.show'|trans }}
              </a>
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>

    <div class="navigation text-center">
        {{ knp_pagination_render(pagination) }}
    </div>
    
    {% else %}
      <p>
          {% include 'default/_single_alert_message.html.twig' with {
            type: 'warning',
            message: 'message.empty_list'|trans
        } %}
      </p>
    {% endif %}
    <p>
      <a href="{{ url('tag_index') }}" title="{{ 'action.back_to_list'|trans }}">
          {{ 'action.back_to_list'|trans }}
      </a>
    </p>
{% endblock %}