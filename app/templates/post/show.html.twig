{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.post'|trans({'%id%': post.id|default('')}) }}
{% endblock %}

{% block main %}
    <h2>{{  post.title }}</h2>
    {% if post is defined and post|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label.author'|trans }}</dt>
            <dd>{{ post.author.email }}</dd>
            <dt>{{ 'label.created_at'|trans }}</dt>
            <dd>{{ post.createdAt|format_date('long') }}</dd>
            <dt>{{ 'label.category'|trans }}</dt>
            <dd>{{  post.category.title }}</dd>
            <dt>{{ 'label.content' }}</dt>
            <dd>{{ post.content }}</dd>
            <dt>{{ 'label.tags'|trans }}</dt>
            {% for tag in post.tags %}
            <dd>{{  tag.title }}</dd>
            {% endfor %}
             <p>
            <a href="{{ url('comment_index') }}" title="{{ 'action.show'|trans }}">
                {{ 'action.comments'|trans }}
            </a>
        </p>
{% endif %}
            {% block comments %}
        
    {% endblock %}
    <p>
            <a href="{{ url('post_index') }}" title="{{ 'action.back_to_list'|trans }}">
                {{ 'action.back_to_list'|trans }}
            </a>
        </p>
{% endblock %}