{% extends 'base.html.twig' %}

{% block title %}{{'title.register'|trans}}{% endblock %}

{% block main %}
    <h2>{{'tile.register' |trans}}</h2>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.password, {
            label: 'Password'
        }) }}

        <button type="submit" class="btn btn-outline-success">{{'label.create_account' |trans}}</button>
        <p><a class="btn btn-outline-primary" href="{{ url('app_login') }}" title="{{ 'action.login'|trans }}">{{'label.login' | trans}}</a></p>

        
    {{ form_end(registrationForm) }}
{% endblock %}

